<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <com.example.wisdombeijing.NoScrollViewPager
        android:id="@+id/content_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.example.wisdombeijing.NoScrollViewPager>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:id="@+id/main_fragment_rg"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/Bottom_Tab_Style"
            android:text="首页"
            android:drawableTop="@drawable/tab_home_selector"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/Bottom_Tab_Style"
            android:text="新闻"
            android:drawableTop="@drawable/tab_news_selector"
            />

        <RadioButton
            android:id="@+id/rb_smart"
            style="@style/Bottom_Tab_Style"
            android:text="智慧"
            android:drawableTop="@drawable/tab_smart_selector"
            />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            style="@style/Bottom_Tab_Style"
            android:text="政务"
            android:drawableTop="@drawable/tab_gove_selector"
            />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/Bottom_Tab_Style"
            android:text="设置"
            android:drawableTop="@drawable/tab_setting_selector"
            />

    </RadioGroup>
    

</LinearLayout>
